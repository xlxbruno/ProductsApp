<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/mystore"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyStore"
        tools:targetApi="31">

        <activity
            android:name=".buyer.checkout.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.MyStore" />
        <activity
            android:name=".buyer.BuyerDashboard"
            android:exported="false"
            android:label="@string/title_activity_buyer_dashboard"
            android:theme="@style/Theme.MyStore" />
        <activity
            android:name=".seller.ViewInventory"
            android:exported="false"
            android:label="@string/title_activity_view_inventory"
            android:theme="@style/Theme.MyStore" />
        <activity
            android:name=".seller.SellerDashboard"
            android:exported="false"
            android:label="@string/title_activity_seller_dashboard"
            android:theme="@style/Theme.MyStore" />
        <activity
            android:name=".OTPVerification"
            android:exported="false"
            android:label="@string/title_activity_otpverification"
            android:theme="@style/Theme.MyStore" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.MyStore">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>